# Server settings
DOCKER_TZ=Europe/Oslo
DATA_DIR=/path/to/your/data
CONFIG_DIR=/path/to/your/config

# Domain settings
PLAUSIBLE_DOMAIN=analytics.yourdomain.com

# Database settings
POSTGRES_PASSWORD=your_secure_postgres_password

# Plausible settings
PLAUSIBLE_SECRET_KEY_BASE=your_64_character_secret_key

# Google integration (optional, for GA import and Search Console)
PLAUSIBLE_GOOGLE_CLIENT_ID=your_google_client_id
PLAUSIBLE_GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email settings (for invitations and password resets)
PLAUSIBLE_SENDER_EMAIL=noreply@yourdomain.com
PLAUSIBLE_SENDER_NAME=Your Company Analytics
PLAUSIBLE_SMTP_HOST=smtp.yourprovider.com
PLAUSIBLE_SMTP_PORT=587
PLAUSIBLE_SMTP_USERNAME=your_smtp_username
PLAUSIBLE_SMTP_PASSWORD=your_smtp_password
